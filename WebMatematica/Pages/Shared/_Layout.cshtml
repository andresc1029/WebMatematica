@{
    var isIndex = ViewData["Title"]?.ToString() == "Inicio";
}
<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]  Inicio </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="~/js/Multiplicaciones.js"></script>
</head>

<body>
    <header>
        <div class="nav-container">
            <a class="logo" asp-area="" asp-page="/Index">Hola, ...</a>
            <nav>
                <ul class="nav-links">
                    <li><a asp-page="/PaginaPrincipal">Inicio</a></li>
                    <li><a asp-page="/Multiplicaciones">Multiplicaciones</a></li>
                    <li><a asp-page="/Pronto">Cerrar Sesión</a></li>
                </ul>
                <button class="nav-toggle" aria-label="Abrir menú">
                    ☰
                </button>
            </nav>
        </div>
    </header>

    <main role="main" class="container">
        @RenderBody()
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
