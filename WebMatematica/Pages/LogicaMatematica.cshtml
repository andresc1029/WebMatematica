@page
@model PrivacyModel
@{
    ViewData["Title"] = "Ejercicios de Lógica";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-8">
        <div class="card shadow-lg text-center" style="background: linear-gradient(135deg, #222 80%, #333 100%);">
            <div class="card-body">
                <h1 class="display-4 mb-2">Ejercicios</h1>
                <h5 class="text-secondary mb-4">Pon a prueba tu razonamiento, encuentra patrones</h5>
                <p class="lead mb-4">
                    Aquí encontrarás diferentes tipos de ejercicios
                    para mejorar 
                </p>
                <ul class="list-unstyled mb-4">
                    <li> Secuencias y patrones</li>
                    <li> Problemas con condiciones</li>
                    <li> Retos visuales</li>
                </ul>
                <div class="row justify-content-center">
                    <div class="col-12 col-md-4 mb-2">
                        <a asp-page="/SecuenciasNumericas" class="btn btn-outline-light btn-lg w-100 logic-btn">
                            Secuencias Numéricas
                        </a>
                    </div>
                    <div class="col-12 col-md-4 mb-2">
                        <a asp-page="/ProblemasCondiciones" class="btn btn-outline-light btn-lg w-100 logic-btn">
                            Problemas con Condiciones
                        </a>
                    </div>
                    <div class="col-12 col-md-4 mb-2">
                        <a asp-page="/PatronesVisuales" class="btn btn-outline-light btn-lg w-100 logic-btn">
                            Patrones <br>Visuales</br>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="mt-4 text-center">
            <small class="text-secondary">
                ¡Acepta el reto y ejercita tu mente!
            </small>
        </div>
    </div>
</div>

<!-- CSS y JS -->
<link rel="stylesheet" href="~/css/logica.css" />
<script src="~/js/logica.js"></script>
