@page
@model IndexModel
@{
    ViewData["Title"] = "";
}

<!-- Sección Inicio -->
<section id="inicio" class="hero-section">
    <div class="hero-container">
        <!-- Texto a la izquierda -->
        <div class="hero-text">
            <h1 class="hero-title">La cupula</h1>
            <h5 class="hero-subtitle">Desafía tu mente, domina la lógica y las matemáticas</h5>
            <p class="hero-lead">
                Bienvenido a la plataforma para potenciar tu
                <strong>razonamiento lógico-matemático</strong>.
                Aquí encontrarás ejercicios, desafíos y recursos para mejorar tus habilidades.
            </p>
            <ul class="feature-list">
                <li>✔ Ejercicios interactivos</li>
                <li>✔ Retos de lógica y razonamiento</li>
            </ul>
            <div class="hero-buttons">
                <a href="/Multiplicaciones" class="btn-primary">Multiplicaciones</a>
                <a href="#logica" class="btn-outline-primary">Lógica</a>
                <a href="/Pronto" class="btn-outline-primary">Más ejercicios</a>
            </div>
        </div>

        <!-- Imagen a la derecha -->
        <div class="hero-image">
            <img class="imgWeb1" src="~/imagenes/ImgWebM.jpg" alt="Matemáticas" />
        </div>
    </div>
</section>

<!-- Sección Ejercicios de Lógica -->
<section id="logica" class="logic-section">
    <div class="logic-container">
        <!-- Imagen izquierda -->
        <div class="logic-image">
            <img src="~/images/logic-illustration.svg" alt="Lógica" />
        </div>
        <!-- Texto derecha -->
        <div class="logic-text">
            <h2 class="logic-title">Ejercicios de Lógica</h2>
            <h5 class="logic-subtitle">Pon a prueba tu razonamiento, encuentra patrones</h5>
            <p class="logic-lead">
                Aquí encontrarás diferentes tipos de ejercicios para mejorar tu lógica.
            </p>
            <ul class="feature-list">
                <li>✔ Secuencias y patrones</li>
                <li>✔ Problemas con condiciones</li>
                <li>✔ Retos visuales</li>
            </ul>
            <div class="logic-buttons">
                <a href="/SecuenciasNumericas" class="btn-dark">Secuencias Numéricas</a>
                <a href="/ProblemasCondiciones" class="btn-dark">Problemas con Condiciones</a>
                <a href="/PatronesVisuales" class="btn-dark">Patrones Visuales</a>
            </div>
        </div>

    </div>
</section>

<link rel="stylesheet" href="~/css/PaginaPrincipal.css" />
<script src="~/js/logica.js"></script>
