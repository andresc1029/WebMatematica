@page "/ReinicioContraseña"
@model WebMatematica.Pages.CambioContraseña.ReincioContraseñaModel
@{
    Layout = "_LayoutLogin";
}
<link rel="stylesheet" href="~/css/ReiniciarContraseñas/reinicioContraseña.css" />
<div class="container">
    <div class="card">
        <h1>Cambiar contraseña</h1>
        <p>Introduce tu nueva contraseña para completar el proceso de recuperación de tu cuenta.</p>

        <form id="resetForm">
            <div class="form-group">
                <input type="password" id="password" name="password" placeholder="Escribe tu nueva contraseña" required>
            </div>

            <div class="form-group">
                <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirma tu contraseña" required>
            </div>

            <button type="submit" class="btn">Actualizar contraseña</button>
        </form>

        <p class="note" style="color: #0d6efd;"><a href="/">Volver al inicio</a></p>
    </div>
</div>
<script src="~/js/CambiarContraseña/CambiarContraseña.js"></script>